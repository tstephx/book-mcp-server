{
  "name": "conservative_v1",
  "book_type": "unknown",
  "version": 1,
  "chapter_detection": {
    "method": "toc_only",
    "min_words_per_chapter": 500,
    "max_words_per_chapter": 30000
  },
  "text_cleaning": {
    "remove_headers_footers": true,
    "normalize_whitespace": true
  },
  "section_splitting": {
    "enabled": true,
    "max_tokens_per_section": 15000
  },
  "quality_thresholds": {
    "min_chapters": 1,
    "max_chapters": 100,
    "min_avg_chapter_words": 200
  },
  "flags_for_review": true
}
